<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".Activity.Chapter2Formula"
    android:background="@color/white">

    <!-- Tombol kembali -->

    <!-- Tombol kembali -->
    <TextView
        android:id="@+id/tvSubTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/plusjakartasans_medium"
        android:text="Rumus Simple Present Tense"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitle" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Judul -->

    <!-- CARD 1 -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="Chapter 2"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <FrameLayout
        android:id="@+id/frameCard1"
        android:layout_width="248dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/starter1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card"
           />

        <TextView
            android:id="@+id/textOnImage1"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakartasans_medium"
            android:text="S + V1 dengan bentuk negatif S + don’t/doesn’t + V1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- CARD 2 -->
    <FrameLayout
        android:id="@+id/frameCard2"
        android:layout_width="248dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/frameCard1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/starter2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card"
            />

        <TextView
            android:id="@+id/textOnImage2"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Subject + Verb 1 + s/es + keterangan lanjutan (objek, waktu, dll)

Pada rumus kedua, ada imbuhan s/es di akhir kata kerja. Ini karena kata kerja yang mengikuti subjek She, He, dan It harus diberi imbuhan s/es"
            android:textColor="@android:color/white"
            android:fontFamily="@font/plusjakartasans_medium"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- CARD 3 -->
    <FrameLayout
        android:id="@+id/frameCard3"
        android:layout_width="248dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/frameCard2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/starter3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card" />

        <TextView
            android:id="@+id/textOnImage3"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakartasans_medium"
            android:text="Bagaimana cara membuat kalimat simple present tense? Berikut rumus simple present tense yang bisa kamu gunakan:
(+) Subject + To be + Complement
(-) Subject + To be + Not + Complement
(?) To be + Subject + Complement "
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:text="Berikutnya"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/frameCard3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
