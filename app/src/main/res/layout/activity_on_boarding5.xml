<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.OnBoarding5Activity">

    <!-- App Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="530dp">

            <ImageView
                android:id="@+id/statrter"
                android:layout_width="248dp"
                android:layout_height="225dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39"
                app:srcCompat="@drawable/on_boarding_screen_5" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="357dp"
                android:layout_height="70dp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:text="Bergabung dengan MyTenses untuk Memulai Pelajaran Anda"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statrter"
                app:layout_constraintVertical_bias="0.189" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/plusjakartasans_medium"
                android:lineSpacingExtra="4sp"
                android:text="Pelajari tenses secara mandiri melalui kursus yang tersusun rapi!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/plusjakartasans_medium"
                android:text="@string/masukUppercase"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerButtonOnBoarding"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/outline_button"
                android:fontFamily="@font/plusjakartasans_medium"
                android:text="@string/daftar"
                android:textColor="@color/blue" />

        </LinearLayout>
    </LinearLayout>

    <!-- Welcome Text -->

    <!-- Description Text -->

    <!-- Login Button -->

    <!-- Register Button -->

</androidx.constraintlayout.widget.ConstraintLayout>