<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:padding="20dp"
        android:src="@drawable/arrow_login_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/resetPw"
            android:layout_width="378dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/plusjakartasans_bold"
            android:gravity="center_horizontal|top"
            android:text="Ubah Kata Sandi"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <TextView
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/plusjakartasans_regular"
            android:gravity="center"
            android:text="Masukkan minimal 6 karakter"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/plusjakartasans_regular"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/emailPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_bg"
            android:fontFamily="@font/plusjakartasans_regular"
            android:hint="Masukkan Email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/plusjakartasans_regular"
            android:text="Kata Sandi Baru"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/NewPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_bg"
            android:fontFamily="@font/plusjakartasans_regular"
            android:hint="Masukkan Kata Sandi Baru"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/plusjakartasans_regular"
            android:text="Konfirmasi Kata Sandi"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_bg"
            android:fontFamily="@font/plusjakartasans_regular"
            android:hint="Konfirmasi Kata Sandi"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSimpanPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/plusjakartasans_regular"
            android:padding="12dp"
            android:text="SIMPAN"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>