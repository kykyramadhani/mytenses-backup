<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/plusjakartasans_medium"
        android:text="Contoh"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card 1 -->
    <FrameLayout
        android:id="@+id/frameCard1"
        android:layout_width="248dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle">

        <ImageView
            android:id="@+id/starter1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card" />

        <TextView
            android:id="@+id/textOnImage1"
            android:layout_width="193dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="“He likes yoghurt soad” artinya “Dia sangat menyukai yogyah”"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        }
    </FrameLayout>

    <!-- Card 2 -->
    <FrameLayout
        android:id="@+id/frameCard2"
        android:layout_width="248dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameCard1">

        <ImageView
            android:id="@+id/starter2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card" />

        <TextView
            android:id="@+id/textOnImage2"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="“I am not tired” or “Aku tidak ada”"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        }
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
