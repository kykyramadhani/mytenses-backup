<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:ellipsize="end"
                android:fontFamily="@font/plusjakartasans_bold"
                android:singleLine="true"
                android:text="Selamat Datang"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.071" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="90dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_bg"
                        android:drawableStart="@drawable/search"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/cari"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColorHint="@color/mediumGray" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:id="@+id/hsvFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etSearch"
                        tools:ignore="NotSibling">

                        <LinearLayout
                            android:id="@+id/filterLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnSimple"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/blue"
                                android:padding="4dp"
                                android:text="Simple"
                                android:textColor="@android:color/white"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnContinuous"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Continuous"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPerfect"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Perfect"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPerf"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Present"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPresent"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Perfect Continuous"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPast"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Past"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnFuture"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Future"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPresentPerfect"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Present Perfect"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />

                            <Button
                                android:id="@+id/btnPastPerfect"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:padding="4dp"
                                android:text="Past Perfect"
                                android:textColor="@android:color/black"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lanjutBelajar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:text="@string/lanjut_belajar" />

                    <TextView
                        android:id="@+id/lihatSemua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/lihat_semua"
                        android:textColor="@color/mediumGray" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/home_bar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                app:srcCompat="@drawable/active_home" />

            <ImageView
                android:id="@+id/class_bar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                app:srcCompat="@drawable/inactive_class" />

            <ImageView
                android:id="@+id/notification_bar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                app:srcCompat="@drawable/inactive_notification" />

            <ImageView
                android:id="@+id/profile_bar"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                app:srcCompat="@drawable/incative_profile" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>